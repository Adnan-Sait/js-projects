{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["**/*.json", ".npmrc", "node_modules", ".vscode"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": "off",
    "no-use-before-define": ["error", { "functions": false }],
    "no-return-await": "off"
  }
}
